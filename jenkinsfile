pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo ' it is a check out section'
            }
        }

        stage('Build') {
            steps {
                // Replace this with your build commands
                echo 'echo "Building the project..."'
            }
        }

        stage('deploy'){
                echo ' deploying stage is done'
        }
    }

    post {
        failure {
            echo "Pipeline failed! Notify the team or take appropriate actions."
        }
    }
}
